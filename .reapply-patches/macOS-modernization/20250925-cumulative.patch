+        .filter(|path| path.exists())
+        .unwrap_or(&generic_lib_dir);
+    println!("cargo:rustc-link-search=native={}", lib_dir.display());
+    println!("cargo:rustc-link-lib=static=SwiftPackage");
+    println!("cargo:rustc-link-lib=framework=AppKit");
